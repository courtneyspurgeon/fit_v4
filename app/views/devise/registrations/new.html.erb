<h2>Sign up</h2>


  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-xs-6">
        <div class="well">
          <div class="form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, :autofocus => true %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation %>
          </div>
        </div> <!-- /.well -->

      </div> <!-- /.6 -->

      <div class="col-xs-6">
        <div class="well">
          <%= content_tag(:p,
            "These are optional for now, but you must fill them out before submitting reviews") %>
          <div class="form-group">
            <%= f.label :hip_measurement %><br />
            <%= f.number_field :hip_measurement %>
          </div>

          <div class="form-group">
            <%= f.label :waist_measurement %><br />
            <%= f.number_field :waist_measurement %>
          </div>

          <div class="form-group">
            <%= f.label :thigh_measurement %><br />
            <%= f.number_field :thigh_measurement %>
          </div>

        </div> <!-- /.well -->
      </div> <!-- /.col-6 -->
    </div> <!-- /.row -->

    <div class="row">
      <div class="col-lg-12">
        <button type="submit" class="btn btn-primary">Sign In</button>
      </div>
    </div>
    

  <% end %>

<%#= render "devise/shared/links" %>


