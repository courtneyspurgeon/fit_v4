<h1>Listing pants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Style</th>
      <th>Price range</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <div class="row">
    <% @pants.each do |pant| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= image_tag pant.image.url %>
        <div class="caption">
          <h3><%= link_to pant.name, pant %></h3>
          <p>
            <%= pant.brand.name %>
          </p>
        </div>
      </div>
    </div> <!-- /.col -->
    <% end %>
  </div> <!-- /.row -->
  <tbody>
    <% @pants.each do |pant| %>
      <tr>
        <td><%= pant.name %></td>
        <td><%= pant.year %></td>
        <td><%= pant.style %></td>
        <td><%= pant.price_range %></td>
        <td><%= link_to 'Show', pant %></td>
        <td><%= link_to 'Edit', edit_pant_path(pant) %></td>
        <td><%= link_to 'Destroy', pant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pant', new_pant_path %>
