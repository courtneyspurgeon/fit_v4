<div class="newPaperclipFiles">
  <%= f.fields_for :attachments do |asset| %>

     <% if attachment.object.new_record? %>
           <%= asset.file_field :image %>
     <% end %>

  <% end %>
</div>

<div class="existingPaperclipFiles">
  <% f.fields_for :attachments do |asset| %>
    
      <% unless attachment.object.new_record? %>
        <div class="thumbnail">
            <%= link_to( image_tag(asset.object.image.url(:thumb)), attachment.object.image.url(:original) ) %>
            <%= attachment.check_box :_delete %>
        </div>
      <% end %>        

  <% end %>
</div>